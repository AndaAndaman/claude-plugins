{
  "description": "Automatically builds subdirectory CLAUDE.md files when 2+ files in same directory are modified",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PLUGIN_ROOT/hooks/scripts/check-context-trigger.sh",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
